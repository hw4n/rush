<% include partials/header %>

<div class="container-fluid">
  <div id="mainRow" class="row">
    <div class="border col-md-3">
      <div>
        <input class="mt-3 slider" type="range" id="volumeControl" min="0" max="100" value="50">
        <h4 class="pl-2 pt-4"><strong>재생 중</strong></h4>
        <ul>
          <li id="nowPlaying"></li>
        </ul>
      </div>
      <div>
        <h4 class="pl-2 pt-4"><strong>접속중인 유저</strong></h4>
        <ul id="userlist">
        </ul>
      </div>
      <video id="streamPlayer" muted="muted" autoplay controls style="height: 40px; width: 100%;"></video>
    </div>
    <div class="px-0 border col-md-9">
      <div id="chat">
      </div>
    </div>
  </div>
  <textarea class="fixed-bottom form-control" type="text" id="chatInput" placeholder="메시지를 입력하세요!"></textarea>
</div>

<script src="/js/chat.js"></script>
<script src="/js/music.js"></script>

<% include partials/footer %>